{{! app/components/site-footer.hbs }}
<footer class="site-footer">
  {{! Wavy divider }}


  <div class="footer-content">
    <div class="footer-grid">
      {{! About Column }}
      <div class="footer-col">
        <h3 class="footer-heading">
          <img src="/images/sushi kings logo white-09.png" alt="Sushi Kings Logo" class="footer-brand-logo">
          {{!<span class="footer-brand">SUSHI</span>
          <span class="footer-brand-accent">MASTER</span>/}}
        </h3>
        <p class="footer-text">
          Preserving Edo-era traditions while innovating modern culinary art. 
          Certified by the Japan Sushi Association.
        </p>
      </div>

      {{! Links Column }}
      <div class="footer-col">
        <h4 class="footer-subheading">Culinary Navigation</h4>
        <ul class="footer-links">
          <li><LinkTo @route="about" class="footer-link">My Journey</LinkTo></li>
          <li><LinkTo @route="menu" class="footer-link">Seasonal Menu</LinkTo></li>
          <li><LinkTo @route="gallery" class="footer-link">Art Gallery</LinkTo></li>
          <li><LinkTo @route="contact" class="footer-link">Concierge</LinkTo></li>
        </ul>
      </div>

      {{! Contact Column }}
      <div class="footer-col">
        <h4 class="footer-subheading">Our Location</h4>
        <div class="footer-contact">
          <div class="footer-contact-item">
            <i class="fa-solid fa-map-pin footer-icon"></i>
            <span>1-2-3 Johannesburg, Randburg City, Jhb</span>
          </div>
          <div class="footer-contact-item">
            <i class="fa-solid fa-envelope footer-icon"></i>
            <span>sushikings08@gmail.com</span>
          </div>
          <div class="footer-contact-item">
            <i class="fa-solid fa-phone footer-icon"></i>
            <span>+27 63 116 2096</span>
          </div>
        </div>
      </div>

      {{! Social Column }}
      <div class="footer-col">
        <h4 class="footer-subheading">Follow the Craft</h4>
        <div class="footer-social">
          <a href="https://www.instagram.com/_sushi.kings_?utm_source=ig_web_button_share_sheet&igsh=ZDNlZDc0MzIxNw==" class="footer-social-link">
            <i class="fa-brands fa-instagram"></i>
          </a>
          <a href="#" class="footer-social-link">
            <i class="fa-brands fa-tiktok"></i>
          </a>
          <a href="#" class="footer-social-link">
            <i class="fa-brands fa-youtube"></i>
          </a>
          <a href="#" class="footer-social-link">
            <i class="fa-brands fa-pinterest"></i>
          </a>
        </div>
        <div class="footer-newsletter">
          <input type="email" placeholder="Subscribe for Sushi Kings Notes"
                 class="footer-input">
          <button class="footer-button">
            <i class="fa-solid fa-fish"></i>
          </button>
        </div>
      </div>
    </div>

    {{! Copyright Bar }}
    <div class="footer-bottom">
      <span class="footer-copy">&copy; 2023 Sushi Kings </span>
      <div class="footer-legal">
        <a href="" class="footer-legal-link">Sushi Kings Terms</a>
        <a href="#" class="footer-legal-link">Privacy Policy</a>
      </div>
    </div>
  </div>
</footer>